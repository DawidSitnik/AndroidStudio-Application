<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/users_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_member_image"
        android:layout_width="66dp"
        android:layout_height="55dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:padding="5dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/single_member_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/single_member_name"
        android:layout_width="170dp"
        android:layout_height="21dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/user_single_image"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Default Name"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/single_member_check"
        app:layout_constraintStart_toEndOf="@+id/single_member_image"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/single_member_check"
        android:layout_width="29dp"
        android:layout_height="26dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/single_member_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482" />

</android.support.constraint.ConstraintLayout>